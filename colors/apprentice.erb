hi clear

if exists('syntax_on')
  syntax reset
endif

set background=dark

let colors_name = 'apprentice'

if &t_Co >= 256 || has('gui_running')
 hi Normal        ctermbg=<%= darker_grey[2] %>   ctermfg=<%=  lighter_grey[2] %> guibg=<%= darker_grey[1] %>   guifg=<%= lighter_grey[1] %>  cterm=NONE       gui=NONE

 set background=dark

 hi Comment       ctermbg=NONE                    ctermfg=<%=  medium_grey[2] %>  guibg=NONE                    guifg=<%=  medium_grey[1] %>  cterm=NONE       gui=NONE
