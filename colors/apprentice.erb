" <%= green        = [ 'green       ' , '#5f875f' ,    '65 ' ,    '2'                ] %>
" <%= light_green  = [ 'light_green ' , '#87af87' ,    '108' ,    '10'               ] %>
" <%= aqua         = [ 'aqua        ' , '#5f8787' ,    '66 ' ,    '6'                ] %>
" <%= light_aqua   = [ 'light_aqua  ' , '#5fafaf' ,    '73 ' ,    '14'               ] %>
