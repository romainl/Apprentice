 hi ColorColumn   ctermbg=<%=  red[2] %>          ctermfg=NONE                    guibg=<%=  red[1] %>          guifg=NONE                    cterm=NONE       gui=NONE
 hi signColumn    ctermbg=<%=  almost_black[2] %> ctermfg=<%=  light_grey[2] %>   guibg=<%=  almost_black[1] %> guifg=<%=  light_grey[1] %>   cterm=NONE       gui=NONE

elseif &t_Co == 8 || $TERM !~# '^linux' || &t_Co == 16
  set t_Co=16

  hi Normal        ctermbg=NONE                    ctermfg=<%= white[3] %>         cterm=NONE

  set background=dark

  hi Comment       ctermbg=NONE                    ctermfg=<%=  dark_grey[3] %>    cterm=NONE
