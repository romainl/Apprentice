  hi PmenuSel      ctermbg=<%=  aqua[3] %>         ctermfg=<%=  almost_black[3] %> cterm=NONE
  hi PmenuThumb    ctermbg=<%=  aqua[3] %>         ctermfg=NONE                    cterm=NONE

  hi ErrorMsg      ctermbg=<%=  red[3] %>          ctermfg=<%=  almost_black[3] %> cterm=NONE
  hi ModeMsg       ctermbg=<%=  green[3] %>        ctermfg=<%=  almost_black[3] %> cterm=NONE
  hi MoreMsg       ctermbg=NONE                    ctermfg=<%=  aqua[3] %>         cterm=NONE
